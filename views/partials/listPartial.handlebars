<ul role="list" class="divide-y divide-gray-100">
  {{#each todos}}
    <li class="flex justify-between gap-x-6 py-5">
      <div class="flex min-w-0 gap-x-4 items-center">
        {{#if completed}}
          <div class="h-12 w-12 flex-none rounded-full bg-green-200"></div>
        {{else}}
          <div class="h-12 w-12 flex-none rounded-full bg-gray-200"></div>
        {{/if}}
        <div class="min-w-0 flex-auto items-cente">
          {{#if edit}}
                    <p id="todoTitle" class="text-sm font-semibold leading-6 text-blue-900 animate-pulse">{{title}}</p>

            {{else}}
          <p class="text-sm font-semibold leading-6 text-gray-900">{{title}}</p>    

          {{/if}}
          {{! <p class="mt-1 truncate text-xs leading-5 text-gray-500">leslie.alexander@example.com</p> }}
        </div>
      </div>
      <div class="hidden shrink-0 sm:flex sm:flex-col sm:items-end">
        <p class="text-sm leading-6 text-gray-900">Due by: {{dueDate}}</p>
        <div class="flex">
          <form class="relative flex flex-1" action="http://localhost:3000/todos/edit-page/{{this._id}}" method="get">
            <button type="submit" class="-m-2.5 p-2.5 text-gray-400 hover:text-gray-500">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
              </svg>
            </button>
          </form>
          {{#if completed}}
            <form class="relative flex flex-1" action="http://localhost:3000/todos/complete/{{this._id}}" method="post">
              <button type="submit" class="-m-2.5 p-2.5 text-gray-400 hover:text-gray-500">

                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m15 15-6 6m0 0-6-6m6 6V9a6 6 0 0 1 12 0v3" />
                </svg>
              </button>
            </form>

          {{else}}
            <form class="relative flex flex-1" action="http://localhost:3000/todos/complete/{{this._id}}" method="post">
              <button type="submit" class="-m-2.5 p-2.5 text-gray-400 hover:text-gray-500">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                </svg>
              </button>
            </form>
          {{/if}}

          <form class="relative flex flex-1" action="http://localhost:3000/todos/delete/{{this._id}}" method="post">
            <button type="submit" class="-m-2.5 p-2.5 text-gray-400 hover:text-gray-500">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
              </svg>

            </button>
          </form>

        </div>

      </div>
    </li>
  {{/each}}
</ul>
